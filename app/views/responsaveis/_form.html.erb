<%= form_with(model: responsavel, local: true) do |f| %>
  <% if responsavel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(responsavel.errors.count, "erro") %> impediram que este respons√°vel fosse salvo:</h2>
      <ul>
        <% responsavel.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :nome %>
  </div>

  <div class="field">
    <%= f.label :telefone %>
    <%= f.text_field :telefone %>
  </div>

  <div class="field">
    <%= f.label :endereco %>
    <%= f.text_field :endereco %>
  </div>

  <div class="actions">
    <%= f.submit 'Salvar' %>
  </div>
<% end %>

<style>
.field {
  margin-bottom: 1rem;
}

.field label {
  display: block;
  margin-bottom: 0.5rem;
  font-weight: bold;
}

.field input[type="text"] {
  width: 100%;
  padding: 0.5rem;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.actions {
  margin-top: 1.5rem;
}

.actions input[type="submit"] {
  background-color: #28a745;
  color: white;
  padding: 0.5rem 1rem;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.actions input[type="submit"]:hover {
  background-color: #218838;
}

#error_explanation {
  color: #721c24;
  background-color: #f8d7da;
  border: 1px solid #f5c6cb;
  padding: 1rem;
  margin-bottom: 1rem;
  border-radius: 4px;
}

#error_explanation h2 {
  font-size: 1.1rem;
  margin-top: 0;
}

#error_explanation ul {
  margin-bottom: 0;
}
</style> 