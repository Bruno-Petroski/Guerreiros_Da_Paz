<%= form_with(model: responsavel, url: responsavel.new_record? ? responsavel_index_path : responsavel_path(responsavel), local: true) do |f| %>
  <% if responsavel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(responsavel.errors.count, "erro") %> impediram que este responsável fosse salvo:</h2>
      <ul>
        <% responsavel.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-section">
    <h3 class="section-title">Dados do Responsável</h3>
    
    <div class="form-field">
      <%= f.label :nome, "Nome do Responsável" %>
      <%= f.text_field :nome, required: true %>
    </div>

    <div class="form-field">
      <%= f.label :cpf, "CPF" %>
      <%= f.text_field :cpf, class: 'form-input', data: { mask: "cpf" }, required: true, maxlength: 14, title: "CPF deve conter 11 dígitos" %>
    </div>

    <div class="form-field">
      <%= f.label :telefone, "Telefone" %>
      <%= f.text_field :telefone, class: 'form-input', data: { mask: "phone" }, required: true, maxlength: 15, title: "Telefone deve conter entre 10 e 11 dígitos" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit responsavel.new_record? ? 'Cadastrar Responsável' : 'Atualizar Responsável', class: 'btn btn-primary' %>
    <%= link_to 'Voltar', responsavel_index_path, class: 'btn btn-secondary' %>
  </div>
<% end %>

<style>
.field {
  margin-bottom: 1rem;
}

.field label {
  display: block;
  margin-bottom: 0.5rem;
  font-weight: bold;
}

.field input[type="text"] {
  width: 100%;
  padding: 0.5rem;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.actions {
  margin-top: 1.5rem;
}

.actions input[type="submit"] {
  background-color: #28a745;
  color: white;
  padding: 0.5rem 1rem;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.actions input[type="submit"]:hover {
  background-color: #218838;
}

#error_explanation {
  color: #721c24;
  background-color: #f8d7da;
  border: 1px solid #f5c6cb;
  padding: 1rem;
  margin-bottom: 1rem;
  border-radius: 4px;
}

#error_explanation h2 {
  font-size: 1.1rem;
  margin-top: 0;
}

#error_explanation ul {
  margin-bottom: 0;
}
</style> 